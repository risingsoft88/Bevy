<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/screen_loginwith01" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="140" />

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="231dp"
            android:layout_height="73dp"
            android:scaleType="fitXY"
            android:background="@drawable/img_logowithtext_white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="280" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="44sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Manage your life \n&amp; money better." />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="48" />

        <ImageView
            android:id="@+id/ivLogin"
            android:layout_width="142dp"
            android:layout_height="44dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitXY"
            android:background="@drawable/btn_login" />

        <ImageView
            android:id="@+id/ivSignup"
            android:layout_width="220dp"
            android:layout_height="44dp"
            android:layout_marginBottom="35dp"
            android:scaleType="fitXY"
            android:background="@drawable/btn_signup" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="Or log in with" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivFacebook"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:background="@drawable/icon_facebook" />

            <ImageView
                android:id="@+id/ivTwitter"
                android:layout_width="20dp"
                android:layout_height="16dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:scaleType="fitXY"
                android:background="@drawable/icon_twitter" />

            <ImageView
                android:id="@+id/ivGoogle"
                android:layout_width="20dp"
                android:layout_height="14dp"
                android:scaleType="fitXY"
                android:background="@drawable/icon_google" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="70" />
    </LinearLayout>

</FrameLayout>